<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Create Campground - <%= campground.title %></title>
    <meta name="description" content="" />

    <!-- Font Awesome -->
    <%- include('../partials/flash.ejs') %>
    <script src="/js/validateForms.js"></script>
    <!-- JavaScript Bundle with Popper -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
      crossorigin="anonymous"
    ></script>

    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet"
    />
    <!-- Google Fonts -->
    <link
      href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
      rel="stylesheet"
    />
    <!-- MDB -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.0.0/mdb.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <!-- Section: Design Block -->
    <section class="text-center text-lg-start">
      <style>
        .cascading-right {
          margin-right: -50px;
        }

        @media (max-width: 991.98px) {
          .cascading-right {
            margin-right: 0;
          }
        }
      </style>

      <!-- Jumbotron -->
      <div class="container py-4">
        <div class="row g-0 align-items-center">
          <div class="col-lg-6 mb-5 mb-lg-0">
            <div
              class="card cascading-right"
              style="
                background: hsla(0, 0%, 100%, 0.55);
                backdrop-filter: blur(30px);
              "
            >
              <div class="card-body p-5 shadow-5 text-center">
                <h2 class="fw-bold mb-5">Edit Campground</h2>
                <form
                  action="/campgrounds/<%=campground._id%>?_method=PUT"
                  method="POST"
                  class="needs-validation"
                  enctype="multipart/form-data"
                  novalidate
                >
                  <div class="form-outline mb-4">
                    <input
                      class="form-control"
                      type="text"
                      id="title"
                      name="campground[title]"
                      value="<%=campground.title %>"
                      required
                    />
                    <label class="form-label" for="title">Title</label>
                    <div class="valid-feedback">Looks good!</div>
                  </div>

                  <div class="form-outline mb-4">
                    <input
                      class="form-control"
                      type="text"
                      id="location"
                      name="campground[location]"
                      value="<%=campground.location %>"
                      required
                    />
                    <label class="form-label" for="location">Location</label>
                    <div class="valid-feedback">Looks good!</div>
                  </div>
                  <div class="form-outline mb-4">
                    <input
                      type="text"
                      class="form-control"
                      id="price"
                      placeholder="0.00"
                      aria-label="price"
                      aria-describedby="price-label"
                      name="campground[price]"
                      value="<%=campground.price %>"
                      required
                    />
                    <label class="form-label" for="location">Price $</label>
                    <div class="valid-feedback">Looks good!</div>
                  </div>
                  <div class="form-outline mb-4">
                    <textarea
                      class="form-control"
                      type="text"
                      id="description"
                      name="campground[description]"
                      required
                    >
<%= campground.description %>
</textarea
                    >
                    <label class="form-label" for="description"
                      >Description</label
                    >
                    <div class="valid-feedback">Looks good!</div>
                  </div>
                  <label for="image" class="form-label">Add Images</label>
                  <div class="form-outline mb-4">
                    <input
                      type="file"
                      class="form-control"
                      id="image"
                      name="image"
                      multiple
                    />
                  </div>

                  <div class="mb-2">
                    <% campground.images.forEach(function(img, i) { %>

                    <img
                      src="<%=img.thumbnail %>"
                      class="img-thumbnail"
                      alt=""
                    />
                    <div class="form-check-inline">
                      <input
                        type="checkbox"
                        id="image-<%=i%>"
                        name="deleteImages[]"
                        value="<%=img.filename%>"
                      />
                    </div>
                    <label for="image-<%=i%>">Delete</label>
                    <% })%>
                  </div>

                  <!-- Checkbox -->
                  <!-- <div class="form-check d-flex justify-content-center mb-4">
                    <input
                      class="form-check-input me-2"
                      type="checkbox"
                      value=""
                      id="form2Example33"
                      required
                    />
                    <label class="form-check-label" for="form2Example33">
                      Agree To Terms
                    </label>
                  </div> -->

                  <!-- Submit button -->
                  <button type="submit" class="btn btn-primary btn-block mb-4">
                    Update Campground
                  </button>

                  <!-- Register buttons -->
                  <div class="text-center">
                    <p>
                      Go
                      <a href="/campgrounds/<%= campground._id %> ">Back</a>
                    </p>
                  </div>
                </form>
              </div>
            </div>
          </div>

          <div class="col-lg-6 mb-5 mb-lg-0">
            <a href="/">
              <img src="/media/edit.png" alt="" style="border-radius: 8px" />
            </a>
          </div>
        </div>
      </div>
      <!-- Jumbotron -->
    </section>
    <!-- Section: Design Block -->
    <!-- MDB -->
    <script
      type="text/javascript"
      src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.0.0/mdb.min.js"
    ></script>
    <script src="/themekit/scripts/jquery.min.js"></script>
    <script src="/themekit/scripts/main.js"></script>
    <link rel="stylesheet" href="/themekit/css/style.css" />
    <link rel="stylesheet" href="/themekit/css/glide.css" />
    <link rel="stylesheet" href="/themekit/css/magnific-popup.css" />
    <link rel="stylesheet" href="/themekit/css/content-box.css" />
    <link rel="stylesheet" href="/themekit/css/contact-form.css" />
    <link rel="stylesheet" href="/themekit/css/media-box.css" />
    <link rel="stylesheet" href="/skin.css" />
    <link rel="icon" href="/media/favicon.png" />

    <%- include('../partials/footer.ejs') %>
  </body>
</html>
